<table class="table table-dark list-table">
  <thead>
    <tr>
      <th scope="col">Index</th>
      <th scope="col">List Name</th>
      <th scope="col">List Link</th>
    </tr>
  </thead>
  <tbody class="table-body">
    <% lists.each.with_index(1) do |list,i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= list.title %></td>
        <td>
          <%= link_to "View", list,
            class: 'btn btn-primary list-link',
            remote: true
          %>
        </td>
        <td>
          <%= button_to "Delete",
               list_url(list),
               class: 'btn btn-danger delete-list__btn',
               method: 'delete',
               data: { confirm: 'Are you sure you want to remove?'},
               remote: true
          %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
