<h1 class="display-4 list-heading">Lists Directory</h1>

<div class="row">
  <div class="col-6 offset-3">
    <table class="table table-dark list-table">
      <thead>
        <tr>
          <th scope="col">Index</th>
          <th scope="col">List Name</th>
          <th scope="col">List Link</th>
        </tr>
      </thead>
      <tbody>
        <% @lists.each.with_index(1) do |list,i| %>
          <tr>
            <th scope="row"><%= i %></th>
            <td><%= list.title %></td>
            <td><%= link_to "View", list_path(list) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
